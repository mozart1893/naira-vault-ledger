# Naira Vault Ledger Backend - Development Environment Variables

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://naira_vault:naira_vault_password@postgres:5432/naira_vault_db
DB_HOST=postgres
DB_PORT=5432
DB_NAME=naira_vault_db
DB_USER=naira_vault
DB_PASSWORD=naira_vault_password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Authentication & Security
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
HOT_RELOAD=true
WATCH_MODE=true

# External APIs (Development - Update with real keys)
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# Payment Gateways (Development - Update with real keys)
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key

# Email Service (Development - Update with real credentials)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@nairavault.com

# SMS Service (Development - Update with real credentials)
SMS_API_URL=https://api.termii.com/v1/sms/send
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=NairaVault

# File Storage
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Feature Flags
FEATURE_MULTI_CURRENCY=true
FEATURE_REAL_TIME_CONVERSION=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_BIOMETRIC_AUTH=false
FEATURE_CRYPTO_SUPPORT=false

# Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
PCI_DSS_COMPLIANT=true
GDPR_COMPLIANT=true
SOX_COMPLIANT=true
